@model DayOut.Models.SelectTimesViewModel
@{
    ViewData["Title"] = "SelectStartEndTime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<h2>SelectStartEndTime</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="SelectStartEndTime">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.RandStartTime" class="control-label"></label>
                <select asp-for="Customer.RandStartTime" class="form-control" asp-items="ViewBag.Time"></select>
            </div>
            <div class="form-group">
                <label asp-for="Customer.RandEndTime" class="control-label"></label>
                <select asp-for="Customer.RandEndTime" class="form-control" asp-items="ViewBag.Time"></select>
            </div>
            @Html.HiddenFor(model => model.AllCategoriesWithPlaceDetails)
            <input type="submit" id="Load_Gif" value="Submit" class="btn btn-default" />
        </form>
    </div>
</div>

@*----------------------------------------------*@

<div class="modal fade" id="myModal" role="dialog" data-url='@Url.Action("LoadingGif", "RandomizedDay")'></div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#Load_Gif').click(function () {

            var url = $('#myModal').data('url');
            $.get(url, function (data) {

                $("#myModal").html(data);
                $("#myModal").modal('show');
            });
        });
    });

</script>