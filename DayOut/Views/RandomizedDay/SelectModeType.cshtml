<div class="container" style="padding-top:10em; width:40% ">
    <div class="row">
        <div class="col-sm-12">
            <div class="modal-content" style="background-color:#f6f5f3; border-radius:75px">
                <div class="modal-header" style="background-color:#f6f5f3; border-radius:75px">
                    <center>
                        <h4 class="modal-title" id="myModal" style="padding-top:20px">Mode</h4>
                    </center>
                    <div>
                        <div class="modal-body" style="background-color:#f6f5f3; border-radius:75px">
                            <center>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div style="float:right">
                                            @Html.ActionLink("Normal", "BuildRoute", "RandomizedDay", null, new { @class = "btn btn-success btn-large", style = "width:200px" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div style="float:left">
                                            @Html.ActionLink("Surprise", "Surprise", "RandomizedDay", null, new { @class = "btn btn-success btn-large", style = "width:200px" })
                                        </div>
                                    </div>
                                </div>
                            </center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>